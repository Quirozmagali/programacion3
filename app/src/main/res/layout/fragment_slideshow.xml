<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ui.slideshow.SlideshowFragment">


    <TextView
        android:id="@+id/txtregistradora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="125dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:text="REGISTRADORA" />

    <EditText
        android:id="@+id/NombredeCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Cliente"
        android:layout_marginTop="90dp"/>

    <EditText
        android:id="@+id/NombredeProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Producto"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/Descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion del Producto"
        android:layout_marginTop="205dp"/>

    <EditText
        android:id="@+id/Cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad del Product"
        android:layout_marginTop="260dp"/>

    <EditText
        android:id="@+id/Precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Precio del Producto"
        android:layout_marginTop="305dp"/>

     <Button
         android:id="@+id/BtnGuardar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="360dp"
         android:layout_marginStart="120dp"
         android:layout_marginEnd="120dp"
         android:background="@drawable/redondeado"
         android:text="GUARDAR DATOS"/>

    <Button
        android:id="@+id/BtnMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:onClick="mostrarVENTAS"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/redondeado"
        android:text="MOSTRAR DATOS"
        tools:ignore="OnClick" />

</RelativeLayout>